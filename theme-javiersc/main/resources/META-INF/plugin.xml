<idea-plugin>
    <id>com.javiersc.intellij.theme</id>
    <name>IDEA Theme - JavierSC</name>
    <vendor>JavierSC</vendor>
    <description>JavierSC light and dark themes for IntelliJ IDEA</description>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <themeProvider id="com.javiersc.intellij.light" path="javiersc_light.theme.json" />
        <themeProvider id="com.javiersc.intellij.dark" path="javiersc_dark.theme.json" />
        <themeProvider id="com.javiersc.intellij.material.light" path="material/light/material.theme.json" />
        <themeProvider id="com.javiersc.intellij.old.dark" path="_old/javiersc_old_dark.theme.json" />
    </extensions>
</idea-plugin>
